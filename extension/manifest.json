{
  "manifest_version": 2,
  "name": "Pin It",
  "version": "1",
  "description": "read stuff offline!",
  "permissions": ["activeTab", "storage", "tabs", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["content.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "browser_action": {
    "default_title": "Pin It",
    "default_popup": "popup.html",
    "default_icon": "pinitLogo.png"
  }
}
